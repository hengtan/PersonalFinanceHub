# =============================================================================
# PERSONAL FINANCE HUB - ENVIRONMENT CONFIGURATION
# =============================================================================

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=3333
HOST=0.0.0.0
LOG_LEVEL=debug

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# PostgreSQL (Write Database - Master)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=personal_finance
POSTGRES_USER=pfh_admin
POSTGRES_PASSWORD=pfh_secure_2024

# PostgreSQL (Read Database - Replica)
POSTGRES_READ_HOST=localhost
POSTGRES_READ_PORT=5433

# MongoDB (Read Database - Replica Set)
MONGODB_URI=mongodb://pfh_admin:mongo_secure_2024@localhost:27017,localhost:27018,localhost:27019/personal_finance_read?replicaSet=rs0&authSource=admin

# =============================================================================
# CACHE & SESSION STORE
# =============================================================================

# Redis (Master)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_secure_2024

# Redis (Read Replica)
REDIS_READ_HOST=localhost
REDIS_READ_PORT=6380

# =============================================================================
# EVENT STREAMING
# =============================================================================

# Kafka Configuration
KAFKA_BROKERS=localhost:9092,localhost:9093,localhost:9094
KAFKA_CLIENT_ID=personal-finance-hub
KAFKA_GROUP_ID=pfh-backend

# =============================================================================
# OBJECT STORAGE
# =============================================================================

# MinIO (S3 Compatible)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=pfh_admin
MINIO_SECRET_KEY=minio_secure_2024
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=personal-finance-hub

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_change_in_production_must_be_at_least_32_chars
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_change_in_production_must_be_at_least_32_chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Keys
ENCRYPTION_KEY=your_32_character_encryption_key_here
HASH_SALT_ROUNDS=12

# API Keys
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=60000

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email Service (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=no-reply@personalfinancehub.com

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications
FIREBASE_PROJECT_ID=your-firebase-project
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Prometheus
PROMETHEUS_ENDPOINT=http://localhost:9090
PROMETHEUS_PUSH_GATEWAY=http://localhost:9091

# Grafana
GRAFANA_URL=http://localhost:3001
GRAFANA_API_KEY=your-grafana-api-key

# Jaeger (Distributed Tracing)
JAEGER_ENDPOINT=http://localhost:14268/api/traces
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6832

# Loki (Log Aggregation)
LOKI_URL=http://localhost:3100

# =============================================================================
# FINANCIAL SERVICES INTEGRATION
# =============================================================================

# Open Banking APIs
OPEN_BANKING_CLIENT_ID=your_open_banking_client_id
OPEN_BANKING_CLIENT_SECRET=your_open_banking_client_secret
OPEN_BANKING_REDIRECT_URI=http://localhost:3333/api/auth/open-banking/callback

# Credit Score APIs
CREDIT_SCORE_API_KEY=your_credit_score_api_key
CREDIT_SCORE_BASE_URL=https://api.creditscore.com

# Investment Data APIs
INVESTMENT_API_KEY=your_investment_api_key
INVESTMENT_BASE_URL=https://api.investment.com

# Currency Exchange APIs
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key
EXCHANGE_RATE_BASE_URL=https://api.exchangerate.com

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Test Database
TEST_POSTGRES_HOST=localhost
TEST_POSTGRES_PORT=5434
TEST_POSTGRES_DB=personal_finance_test
TEST_POSTGRES_USER=pfh_test
TEST_POSTGRES_PASSWORD=pfh_test_2024

# Test Redis
TEST_REDIS_HOST=localhost
TEST_REDIS_PORT=6381

# Test MongoDB
TEST_MONGODB_URI=mongodb://localhost:27020/personal_finance_test

# Debug Configuration
DEBUG_PORT=9229
DEBUG_HOST=0.0.0.0

# =============================================================================
# DOCKER & DEPLOYMENT
# =============================================================================

# Docker Compose
COMPOSE_PROJECT_NAME=personal-finance-hub
COMPOSE_FILE=docker-compose.yml

# Health Check
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature Toggles
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true
ENABLE_EVENTS=true

# Beta Features
BETA_AI_INSIGHTS=false
BETA_INVESTMENT_TRACKING=false
BETA_SOCIAL_FEATURES=false

# =============================================================================
# BUSINESS LOGIC
# =============================================================================

# Transaction Limits
MAX_TRANSACTION_AMOUNT=1000000
DAILY_TRANSACTION_LIMIT=5000000
MONTHLY_TRANSACTION_LIMIT=50000000

# Account Settings
MAX_ACCOUNTS_PER_USER=50
MAX_CATEGORIES=100
MAX_BUDGETS=20

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,csv,xlsx

# Session Management
SESSION_TIMEOUT=3600000
MAX_CONCURRENT_SESSIONS=5

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Database Backup
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=pfh-backups
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key

# Disaster Recovery
DR_ENABLED=false
DR_REGION=us-west-2
DR_RTO=4h
DR_RPO=1h